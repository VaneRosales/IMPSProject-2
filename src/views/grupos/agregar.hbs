<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar Grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/grupos/agregar">
                
                <div class="form-group">
                    <input type="text" class="form-control" name="num_grupo" placeholder="Número del grupo" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="anio" placeholder="Año del grupo" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="ciclo" placeholder="Ciclo del grupo" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="idmateria" placeholder="ID Materia" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="idprofesor" placeholder="ID Profesor" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>